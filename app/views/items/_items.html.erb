<div class="container">
  <div class="container-inner inner-default clearfix">
    <%# page_entries_info @items %>
    <% items.each do |item| %>
    <% #item名取得 %>
    <% @item_name = item["itemName"] %>
    <% #itemイメージ取得 %>
    <% if item["mediumImageUrls"].first != nil %>
      <% @item_img_tag = item["mediumImageUrls"].first["imageUrl"].gsub("?_ex=128x128", "") %>
      <% @item_img = image_tag(@item_img_tag , alt: @item_name) %>
    <% else %>
      <% @item_img = image_tag("no-image.png" , alt: @item_name) %>
    <% end %>
      <div class="item-box">
        <div class="image">
          <div class="img-wrap">
            <% #TODO 商品画像 %>
            <%= @item_img %>
          </div>
        </div>
        <div class="detail">
          <p class="title">
            <% #TODO 商品タイトル %>
            <%= @item_name %>
          </p>
        </div>
        <div class="action clearfix">
          <%= link_to "" , ownerships_path(item_code: item['itemCode'] , type: "Want") ,
                      :class => "btn-want btn btn-danger btn-sm want",
                      :item_code => "want-#{item['itemCode']}",
                      :remote => true,
                      :method => :post %>
          <%= link_to "" , ownerships_path(item_code: item['itemCode'] , type: "Have") ,
                      :class => "btn-have btn btn-warning btn-sm have",
                      :item_code => "have-#{item['itemCode']}",
                      :remote => true,
                      :method => :post %>
        </div>
      </div>
    <% end %>
    <% #paginate @items %>
  </div>
</div>
