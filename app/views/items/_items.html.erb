<div class="container">
  <div class="container-inner inner-default clearfix">
    <% items.each do |item| %>
    <% #itemイメージ取得 %>
    <% @item_img = item["mediumImageUrls"].first["imageUrl"].gsub("?_ex=128x128", "") %>
    <% #item名取得 %>
    <% @item_name = item["itemName"] %>
      <div class="item-box">
        <div class="image">
          <div class="img-wrap">
            <% #TODO 商品画像 %>
            <% if @item_img != nil %>
              <%= image_tag(@item_img , alt: item["itemName"]) %>
            <% elsif %>
              <%= image_tag("no-image.png" , alt: item['itemName']) %>
            <% end %>
          </div>
        </div>
        <div class="detail">
          <p class="title">
            <% #TODO 商品タイトル %>
            <%= @item_name %>
          </p>
        </div>
        <div class="action clearfix">
          <%= link_to "" , ownerships_path(item_code: item['itemCode'] , type: "Want") ,
                      :class => "btn-want btn btn-danger btn-sm want",
                      :item_code => "want-#{item['itemCode']}",
                      :remote => true,
                      :method => :post %>
          <%= link_to "" , ownerships_path(item_code: item['itemCode'] , type: "Have") ,
                      :class => "btn-have btn btn-warning btn-sm have",
                      :item_code => "have-#{item['itemCode']}",
                      :remote => true,
                      :method => :post %>
        </div>
      </div>
      <% #@item_img初期化 %>
      <% @item_img = nil %>
    <% end %>
  </div>
</div>
