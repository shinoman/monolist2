<% content_for :head do %>
  <meta property="title" content="<%= @item.title %> - monolist" />
  <meta property="description" content="<%= @item.title %>に関する情報です。この商品をほしい人、持っている人を表示しています。" />
<% end %>
<div class="container">
  <div class="container-inner inner-sm clearfix">
    <div class="item-single-main">
      <div class="image">
        <div class="img-wrap">
          <% #TODO 商品イメージ %>
          <%= image_tag(@item.large_image , alt: @item.title) %>
        </div>
      </div>
      <div class="title">
        <% #TODO 商品タイトル %>
        <%= @item.title %>
      </div>
      <%= render 'items/action' , item: @item if logged_in? %>
    </div>
    <div class="item-single-side">
      <div class="side-box">
        <h4 class="side-box-title">Haveしたユーザー</h4>
        <div class="side-box-body">
          <% # TODO Haveしたユーザー一覧 %>
          <ul>
          <% @haves.each do |f| %>
          　 <li><div>
          　 <center><%= link_to gravatar_for(f, size: 60), f %><br>
              <span class="user"><%= link_to f.name, f %></span>
             </center></div></li>
          <% end %></ul>
        </div>
      </div>
      <div class="side-box">
        <h4 class="side-box-title">Wantしたユーザー</h4>
        <div class="side-box-body">
          <% # TODO Wantしたユーザー一覧 %>
              <ul><% @wants.each do |f| %>
          　 <li><div>
          　 <center><%= link_to gravatar_for(f, size: 60), f %><br>
              <span class="user"><%= link_to f.name, f %></span>
             </center></div></li>
          <% end %></ul>
        </div>
      </div>
      <div class="text-center">
        <% #TODO 正しいリンク先に %>
        <%= link_to('楽天詳細ページへ', @item.detail_page_url) %>
      </div>
    </div>
  </div>
</div>
